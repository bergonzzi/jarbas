# Ubuntu Upstart script template
author "Your name"
description "Upstart script for whatsapp bot"

start on runlevel [2345]
stop on shutdown
respawn

# Set the user under which you want to your bot to run
setuid bot
setgid bot

# Set the home dir for your bot
chdir /home/bot/your_bot

# Customize your start command as needed
script
    echo $$ > bot.pid
    exec ./start.sh auth/auth.conf >> log/bot.out.log 2>&1
end script

pre-stop script
    rm bot.pid
end script